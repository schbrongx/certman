<h1>New Keypair</h1>

<%= form_for(@key) do |f| %>
  <% if @key.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@key.errors.count, "error") %> prohibited this key from being saved:</h2>

      <ul>
      <% @key.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

	<%# AJAX call for generating a new keypair %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
	    <%= link_to 'Generate Keypair', generate_new_key_path, class:"btn btn-success", update:"content_1", remote:true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Public key", class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :content, class:"form-control", rows:"10", class:"form-control", id: "content_public" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Private key", class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :content, class:"form-control", rows:"10", class:"form-control", id: "content_private" %>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-8">
      <div class="actions">
        <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-success" do %>
          <span class="glyphicon glyphicon-ok"></span> Submit
        <% end %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, keys_path, class:"btn btn-default" %>
      </div>
    </div>

  </div>
<% end %>


