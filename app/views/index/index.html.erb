
<!-- index#index -->
<% if user_signed_in? %>
  <h1>Welcome, <%= current_user.username.capitalize %>!</h1>

    <h2>Things to do</h2>
    <p>
      <ul>
        <li><%= link_to 'Create a new keystore', keystores_path %> for your a keypair + CSR + certificate</li>
        <li>Create a new <%= link_to 'keypair', keypairs_path %> or <%= link_to 'CSR', csrs_path %></li>
        <li>Submit your CSR to a certificate-authority (CA) like Thawte or VeriSign or sign it yourself and create a <%= link_to 'certificate', certificates_path %></li>
      </ul>
    </p>

  <h2>Notifications <span class="badge"><%=  @notifications != 0 ? @notifications : "" %></span></h2>
    <p>
      <ul>
        <li>
          Keystores with missing items: <%= @keystores_missing_items %>
        </li>
        <li>
          Unsigned CSRs: <%= @csrs_unsigned %>
        </li>
        <li>
          Certificates expiring soon: <%= @certificates_expiring_soon %>
        </li>
      </ul>
    </p>
  </div>
  
  
  
  
  
<% else %>
  <div class="jumbotron">
  <h1>Welcome!</h1>
  <p>
    Please sign in to use this application.
  </p>
  <%= link_to "Sign in", new_user_session_path, class:"btn btn-xs btn-success" %>
  </div>
<% end #if user_signed_in?%>

<% if Rails.env.development? %>
  <hr> <!-- ----- ----- ----- ----- -----  -->
  <h4>Git-commit</h4>
  <p>
    <%= GIT_COMMIT %><br />
    (<%= GIT_COMMIT_TIMESTAMP %>)
  </p>
  <hr> <!-- ----- ----- ----- ----- -----  -->
<% end  # if Rails.env.development? %>
<!-- end index#index -->
