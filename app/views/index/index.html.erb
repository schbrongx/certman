
<!-- index#index -->
<% if user_signed_in? %>
  <h1>Welcome, <%= current_user.username.capitalize %>!</h1>
<% else %>
  <h1>Welcome!</h1>
  <p>
    Please sign in to use this application.
  </p>
  <%= link_to "Sign in", new_user_session_path, class:"btn btn-sm btn-success" %>
<% end #if user_signed_in?%>

<hr> <!-- ----- ----- ----- ----- -----  -->
<% if Rails.env.development? %>
  <h2>Development environment info</h2>
  <p>
    <strong>Git-commit</strong> <%= GIT_COMMIT %><br />
    <strong>Git-timestamp:</strong> <%= GIT_COMMIT_TIMESTAMP %> 
  </p>
<% end  # if Rails.env.development? %>
<!-- end index#index -->
