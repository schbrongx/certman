<h1>Listing Keystores</h1>
<% if Keystore.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Keypair</th>
        <th>CSR</th>
        <th>Certificate</th>
        <th>Action</th>
      </tr>
      </thead>
    
      <tbody>
      <% @keystores.each do |keystore| %>
        <tr>
        <td><%= keystore.id %></td>
        <td><%= keystore.name %></td>
        <td><%= keystore.description %></td>
		<td><%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe + ' ' + keystore.keypair.name, keypair_path(keystore.keypair), class: 'btn btn-xs btn-default btn-show-modal', remote: true %></td>
		<td><%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe + ' ' + keystore.csr.name, csr_path(keystore.csr), class: 'btn btn-xs btn-default btn-show-modal', remote: true %></td>
        <td><%= link_to keystore.certificate.name, keystore.certificate, style:"text-decoration: none" %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_keystore_path(keystore), class:"btn btn-sm btn-default" %>
          <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, keystore, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
    	</td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <!-- Modal modal_show , bootstrap modal container for #show view -->
    <div class="modal fade" id="modal_show" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body" id="modal_show_body">
            Loading ...
          </div>
    	  <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    
    <script>
      $(document).ready(function() {
        var click_modal_show = function(){
          $('body').on('click', '.btn-show-modal', function(){
            $('#modal_show').modal('show');
          });
        }
        click_modal_show();
      });
    </script>
  </div>
<% end %>

<a class="btn btn-sm btn-default" href="<%=new_keystore_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add Keystore
</a>
