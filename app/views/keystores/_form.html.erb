<%= form_for(@keystore) do |f| %>
  <% if @keystore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keystore.errors.count, "error") %> prohibited this keystore from being saved:</h2>

      <ul>
      <% @keystore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 4, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :keypair_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
       <%= f.select "keypair_id", options_from_collection_for_select(@keypairs, "id", "name", f.object.keypair_id), include_blank: "none", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :csr_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
       <%= f.select "csr_id", options_from_collection_for_select(@csrs, "id", "name", f.object.csr_id),include_blank: "none", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :certificate_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
       <%= f.select "certificate_id", options_from_collection_for_select(@certificates, "id", "name", f.object.certificate_id),include_blank: "none", class:"form-control" %>
      </div>
    </div>


    <div class="col-sm-offset-2 col-sm-8">
      <div class="actions">
        <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-sm btn-success" do %>
          <span class="glyphicon glyphicon-ok"></span> Submit
        <% end %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, request.referer, class:"btn btn-sm btn-default" %>
      </div>
    </div>

	</div>

<% end %>
