<h1><%= t 'devise.invitations.edit.header' %></h1>
  <%= devise_error_messages! %>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
<div class="form-horizontal">

  <%= f.hidden_field :invitation_token %>

  <div class="form-group">
    <%= f.label :username, class:"control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :username, class:"form-control" %>
	</div>
  </div>

  <% if f.object.class.require_password_on_accepting %>
  <div class="form-group">
  <%= f.label :password, class:"control-label col-sm-2" %>
    <div class="col-sm-8">
  <%= f.password_field :password, class:"form-control" %>
	</div>
  </div>

  <div class="form-group">
  <%= f.label :password_confirmation, class:"control-label col-sm-2" %>
    <div class="col-sm-8">
  <%= f.password_field :password_confirmation, class:"form-control" %>
	</div>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit t("devise.invitations.edit.submit_button"), class:"btn btn-default" %>
    </div>
  </div> <!-- form-group -->
<% end %>
