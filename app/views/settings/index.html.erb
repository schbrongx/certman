<h1>Listing Settings</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
    </thead>
  
    <tbody>
      <% @settings.each do |setting| %>
        <tr>
          <td><%= setting.name %></td>
          <td><%= setting.description %></td>
          <td><%= setting.value %></td>
          <td>
            <%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_setting_path(setting), class:'btn btn-xs btn-default btn-show-modal', remote:true %>
      	</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'layouts/modal' %>
</div>
