<!-- _warnings -->
<% if notice %>
<div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <p><%= notice %></p>
</div>
<% end %>

<% if alert %>
<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <p><%= alert %></p>
</div>
<% end %>

<% # try to prevent users from sticking to the default password by displaying an alert %>
<% unless current_user.nil? %>
  <% if current_user.username == 'admin' %>
    <% if User.find(1).encrypted_password == '$2a$11$Ji4Lq2OqksrOX51Om6y3UOOUF63mcsXcXSs0y7JG88KFf0SKzjcRO' %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p>The password of the admin-account is still set to default. Please change this as soon as possible.</p>
      </div>
    <% end %>
  <% end %>
<% end %>
<!-- end _warnings -->
