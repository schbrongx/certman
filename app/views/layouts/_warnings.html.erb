
<!-- _warnings.html.erb -->
<% # show alert or notice messages as dismissable bootstrapped alertbox %>
<% if (alert) || (notice) 
  if notice
    div_class="success"
    message=notice
  elsif alert
    div_class="danger"
    message=alert
  end %>
  <div class="alert alert-<%= div_class %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p>
      <%= message %>
    </p>
  </div>
  <% # add a script that slowly fades out success messages for convenience %>
  <script>
    setTimeout("$('.alert-success').fadeOut('fast')", 3000)
  </script>
<% end  # if alert || notice%>
<% # try to prevent users from sticking to the default password by displaying an alert %>
<% unless current_user.nil? %>
  <% if current_user.username == 'admin' %>
    <% if User.find(1).encrypted_password == '$2a$11$Ji4Lq2OqksrOX51Om6y3UOOUF63mcsXcXSs0y7JG88KFf0SKzjcRO' %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p>The password of the admin-account is still set to default. Please change this as soon as possible.</p>
      </div>
    <% end %>
  <% end %>
<% end %>
<!-- end _warnings.html.erb -->