<%= form_for(@csr) do |f| %>
  <% if @csr.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@csr.errors.count, "error") %> prohibited this csr from being saved:</h2>

      <ul>
      <% @csr.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :key_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.select "key_id", options_from_collection_for_select(@key, "id", "id"), class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :content, class:"form-control", rows:"10" %>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-8">
      <div class="actions">
        <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-submit" do %>
          <span class="glyphicon glyphicon-ok"></span> Submit
        <% end %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, csrs_path, class:"btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
