  <% if @csr.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h2><%= pluralize(@csr.errors.count, "error") %> prohibited this csr from being saved:</h2>

      <ul>
      <% @csr.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  
  <%= form_for(@csr) do |f| %>

  <div class="form-horizontal" id="form0">
    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control", id:"name" %>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :keypair_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
           <%= f.select "keypair_id", options_from_collection_for_select(@keypairs, "id", "name", f.object.keypair_id), class:"form-control", include_blank: true %>
      </div>
    </div>
    
    <div class="form-group">
    <%= f.label :csrtemplate_id, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
           <%= f.select "csrtemplate_id",
		         options_from_collection_for_select(@csrtemplates, "id", "name", f.object.csrtemplate_id),
				 class:"form-control",
				 include_blank: true %>
		   <%= link_to "Fill CSR with template values",
		       templatefiller_csrs_path,
			   method: :post,
			   remote:true,
			   id:"templatefiller_button",
			   class:"btn btn-warning btn-xs"
		   %>
               <%#catch onclick event for above link and submit selected template id to templatefiller.js.erb via AJAX %>
               <script>
                $("#templatefiller_button").on("click", function(event) {
               	event.preventDefault();
               	event.stopPropagation();
                   console.log("templatefiller_button clicked");
               	$.ajax({
                     url: '/csrs/templatefiller',
                     dataType: 'script',
                     data:'csrtemplate_id='+jQuery("#csr_csrtemplate_id").val(),
                     type:'post',
                   })
                 });
               </script>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Common Name (CN)</label>
      <div class="col-sm-8">
		<%= f.text_field :cn, class:"form-control", id:"cn", placeholder:"www.example.com" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Organization (O)</label>
      <div class="col-sm-8">
		<%= f.text_field :o, class:"form-control", id:"o", placeholder:"Example Corporation" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Organizational Unit (OU)</label>
      <div class="col-sm-8">
		<%= f.text_field :ou, class:"form-control", id:"ou", placeholder:"IT" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">City (L)</label>
      <div class="col-sm-8">
		<%= f.text_field :l, class:"form-control", id:"l", placeholder:"St Gallen" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">State (S)</label>
      <div class="col-sm-8">
		<%= f.text_field :s, class:"form-control", id:"s", placeholder:"SG" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Country (C)</label>
      <div class="col-sm-8">
		<%= f.text_field :c, class:"form-control", id:"c", placeholder:"CH" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-8">
		<%= f.text_field :email, class:"form-control", id:"email", placeholder:"admin@example.com" %>
      </div>
    </div>

	<%# AJAX call for generating a new CSR %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
	    <%= link_to 'Generate CSR',
		    autogenerate_csrs_path,
			method:"POST",
			remote:true,
			id:"autogenerate_button",
			data: { confirm: 'Are you sure?' },
			class:"btn btn-warning btn-xs btn-block"
		%>
        <%#catch onclick event for above link and submit selected template id to templatefiller.js.erb via AJAX %>
        <script>
         $("#autogenerate_button").on("click", function(event) {
        	event.preventDefault();
            event.stopPropagation();
        	$.ajax({
              url: '/csrs/autogenerate',
              dataType: 'script',
              type:'post',
			  data: { name: jQuery("#name").val(),
			          keypair_id: jQuery("#csr_keypair_id").val(),
					  cn: jQuery("#cn").val(),
					  o:jQuery("#o").val(),
					  ou:jQuery("#ou").val(),
					  l:jQuery("#l").val(),
					  s:jQuery("#s").val(),
					  c:jQuery("#c").val(),
					  email:jQuery("#email").val(),
			  },
			  success: function() { 
			             alert("Successful");
			  },
              error: function() {
			             alert("Unsuccessful");
			  }
            })
          });
        </script>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :content, class:"form-control", rows:"10", id:"content" %>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-8">
      <div class="actions">
        <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-success" do %>
          <span class="glyphicon glyphicon-ok"></span> Submit
        <% end %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, csrs_path, class:"btn btn-default" %>
      </div>
    </div>

  </div>
<% end %>

