<p id="notice"><%= notice %></p>

<h1>Listing CSRs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @csrs.each do |csr| %>
      <tr>
        <td><%= truncate(csr.content, length: 80) %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe, csr, class:"btn btn-default" %>
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_csr_path(csr), class:"btn btn-default" %>
          <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, csr, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a class="btn btn-default" href="<%=new_csr_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add CSR 
</a>
