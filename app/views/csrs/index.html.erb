<h1>Listing CSRs</h1>
<% if Csr.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Keypair</th>
          <th>CSR Template</th>
          <th>Content</th>
          <th>Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @csrs.each do |csr| %>
          <tr>
            <td rowspan="2"><%= csr.id %></td>
            <td rowspan="2"><%= csr.name %></td>
            <td rowspan="2"><%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe + ' ' + csr.keypair.name, keypair_path(csr.keypair), class: 'btn btn-xs btn-default btn-show-modal', remote: true %></td>
            <td rowspan="2"><%= link_to csr.csrtemplate.name, csr.csrtemplate, style:"text-decoration: none" %></td>
            <td><%= truncate(csr.content, length: 70) %></td>
            <td rowspan="2">
              <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe, csr_path(csr), class: 'btn btn-sm btn-default btn-show-modal', remote: true %>
              <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_csr_path(csr), class:"btn btn-sm btn-default" %>
              <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, csr, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
             </td>
          </tr>
    	  <tr>
    		<td>CN: <%=csr.cn%>, O: <%=csr.o%>, OU: <%=csr.ou%>, L: <%=csr.l%>, S: <%=csr.s%>, C: <%=csr.c%>, Email: <%=csr.email%></td>
    	  </tr>
        <% end %>
      </tbody>
    </table>
      <!-- Modal modal_show , bootstrap modal container for #show view -->
      <div class="modal fade" id="modal_show" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body" id="modal_show_body">
              Loading ...
            </div>
      	  <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      
      <script>
        $(document).ready(function() {
          var click_modal_show = function(){
            $('body').on('click', '.btn-show-modal', function(){
              $('#modal_show').modal('show');
            });
          }
          click_modal_show();
        });
      </script>
  </div>
<% end %>

<a class="btn btn-sm btn-default" href="<%=new_csr_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add CSR 
</a>
