<p id="notice"><%= notice %></p>

<h1>Listing Keys</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Keytype</th>
      <th>Content</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @keys.each do |key| %>
      <tr>
        <td><%= key.id %></td>
        <td><%= key.name %></td>
        <td><%= key.keytype.name %></td>
        <td><%= truncate(key.content, length: 70) %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe, key, class:"btn btn-default" %>
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_key_path(key), class:"btn btn-default" %>
          <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, key, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a class="btn btn-default" href="<%=new_key_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add Key
</a>
