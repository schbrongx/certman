<h1>Listing Keypairs</h1>
<% if Keypair.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
    	  <th>Id</th>
          <th>Name</th>
          <th>Privatekey</th>
          <th>Publickey</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @keypairs.each do |keypair| %>
          <tr>
    	    <td><%= keypair.id %></td>
            <td><%= keypair.name %></td>
            <td><%= truncate(keypair.privatekey, length: 60) %></td>
            <td><%= truncate(keypair.publickey, length: 60) %></td>
            <td>
			  <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe, keypair_path(keypair), class: 'btn btn-sm btn-default btn-show-modal', remote: true %>
              <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_keypair_path(keypair), class:"btn btn-sm btn-default" %>
              <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, keypair, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
             </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <!-- Modal modal_show , bootstrap modal container for #show view -->
      <div class="modal fade" id="modal_show" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body" id="modal_show_body">
              Loading ...
            </div>
      	  <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      
      <script>
        $(document).ready(function() {
          var click_modal_show = function(){
            $('body').on('click', '.btn-show-modal', function(){
              $('#modal_show').modal('show');
            });
          }
          click_modal_show();
        });
      </script>
  </div>
<% end %>

<a class="btn btn-sm btn-default" href="<%=new_keypair_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add Keypair
</a>
