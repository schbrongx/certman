<%
  key = OpenSSL::PKey::RSA.new @keysize.value.to_i
%>

// only fill name-field with autogenerated name if it is empty
if( $('#name').val().length === 0 ) {
  $('#name').val ('Autogenerated Key: <%= j DateTime.now.to_s(:number) %>');
}

$('#content_private').val('<%= j key.to_pem %>');
$('#content_public').val('<%= j key.public_key.to_pem %>');

