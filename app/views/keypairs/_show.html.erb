<p>
  <strong>Name:</strong><br>
  <%= @keypair.name %>
</p>

<p>
  <strong>Privatekey:</strong>
  <br /><button class="btn btn-default btn-xs btn-copy-clipboard" data-clipboard-target="#privatekey_content"><span class="glyphicon glyphicon-copy" aria-hidden="true"></span></button>
  <br /><small><%= simple_format @keypair.privatekey.html_safe, id:"privatekey_content", class:"long-paragraph" %></small>
</p>

<p>
  <strong>Publickey:</strong>
  <br /><button class="btn btn-default btn-xs btn-copy-clipboard" data-clipboard-target="#publickey_content"><span class="glyphicon glyphicon-copy" aria-hidden="true"></span></button>
  <br /><small><%= simple_format @keypair.publickey.html_safe, id:"publickey_content", class:"long-paragraph" %></small>
</p>
