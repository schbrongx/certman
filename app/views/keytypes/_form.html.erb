<%= form_for(@keytype) do |f| %>
  <% if @keytype.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keytype.errors.count, "error") %> prohibited this keytype from being saved:</h2>

      <ul>
      <% @keytype.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="field form-group">
      <%= f.label :name, class:"col-sm-2 control-label"%>
      <div class="col-sm-6">
        <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <div class="actions">
          <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-submit" do %>
            <span class="glyphicon glyphicon-plus-sign"></span>Submit
          <% end %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, keytypes_path, class:"btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
