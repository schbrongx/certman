<%= form_for(@csrtemplate) do |f| %>
  <% if @csrtemplate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@csrtemplate.errors.count, "error") %> prohibited this csrtemplate from being saved:</h2>

      <ul>
      <% @csrtemplate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control" %>
      </div>
	</div>
	
    <div class="form-group">
      <%= f.label :description, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 4, class:"form-control" %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :cn, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :cn, class:"form-control", placeholder:"Common name, i.e.: www.example.com" %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :o, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :o, class:"form-control", placeholder:"Organization, i.e.: Example Corp." %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :ou, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :ou, class:"form-control", placeholder:"Organizational unit, i.e.: IT Department" %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :l, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :l, class:"form-control", placeholder:"Location (City), i.e.: St Gallen" %>
      </div>
  </div>

    <div class="form-group">
     <%= f.label :s, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :s, class:"form-control", placeholder:"State, i.e.: SG" %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :c, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :c, class:"form-control", placeholder:"Country, i.e.: CH" %>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :email, class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :email, class:"form-control", placeholder:"Email, i.e.: admin@example.com" %>
      </div>
  </div>

	<div class="col-sm-offset-2 col-sm-8">
      <div class="actions">
        <%= f.button :submit, name: "commit", value: "commit", class:"btn btn-sm btn-success" do %>
          <span class="glyphicon glyphicon-ok"></span> Submit
        <% end %>
        <%= link_to '<span class="glyphicon glyphicon-remove"></span> Cancel'.html_safe, csrtemplates_path, class:"btn btn-sm btn-default" %>
      </div>
    </div>
<% end %>
