<h1>Listing CSR Templates</h1>
<% if Csrtemplate.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Data</th>
          <th>Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @csrtemplates.each do |csrtemplate| %>
          <tr>
            <td><%= csrtemplate.id%></td>
            <td><%= csrtemplate.name %></td>
            <td><%= csrtemplate.description %></td>
            <td>CN=<%= csrtemplate.cn %></br>
                OU=<%= csrtemplate.ou %></br>
                O=<%= csrtemplate.o %></br>
                L=<%= csrtemplate.l %></br>
                S=<%= csrtemplate.s %></br>
                C=<%= csrtemplate.c %></br>
                Email=<%= csrtemplate.email %></td>
            <td>
              <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_csrtemplate_path(csrtemplate), class:"btn btn-sm btn-default" %>
              <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, csrtemplate, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <!-- Modal modal_show , bootstrap modal container for #show view -->
      <div class="modal fade" id="modal_show" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body" id="modal_show_body">
              Loading ...
            </div>
      	  <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      
      <script>
        $(document).ready(function() {
          var click_modal_show = function(){
            $('body').on('click', '.btn-show-modal', function(){
              $('#modal_show').modal('show');
            });
          }
          click_modal_show();
        });
      </script>
  </div>
<% end %>

<a class="btn btn-sm btn-default" href="<%=new_csrtemplate_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add CSR Template
</a>

