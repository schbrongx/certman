<h1>Listing CSR Templates</h1>
<% if Csrtemplate.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Data</th>
          <th>Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @csrtemplates.each do |csrtemplate| %>
          <tr>
            <td><%= csrtemplate.name %></td>
            <td><%= csrtemplate.description %></td>
            <td>CN=<%= csrtemplate.cn %></br>
                OU=<%= csrtemplate.ou %></br>
                O=<%= csrtemplate.o %></br>
                L=<%= csrtemplate.l %></br>
                S=<%= csrtemplate.s %></br>
                C=<%= csrtemplate.c %></br>
                Email=<%= csrtemplate.email %></td>
            <td>
              <%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_csrtemplate_path(csrtemplate), class:"btn btn-xs btn-default btn-show-modal", remote:true %>
              <%= link_to '<span class="glyphicon glyphicon-trash"></span> Delete'.html_safe, csrtemplate, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'layouts/modal' %>
  </div>
<% end %>

<%= link_to '<span class="glyphicon glyphicon-plus-sign"></span> Add CSR Template'.html_safe, new_csrtemplate_path, class:"btn btn-xs btn-default btn-show-modal", remote:true %>
