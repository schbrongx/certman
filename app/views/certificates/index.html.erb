<h1>Listing Certificates</h1>
<% if Certificate.all.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
		  <th>CSR</th>
		  <th>Keypair</th>
          <th>Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @certificates.each do |certificate| %>
          <tr>
            <td><%= certificate.name %></td>
            <td><%= certificate.certificatetype.name %></td>
        <td>
          <% unless certificate.csr.nil? %>
            <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe + ' ' + truncate(certificate.csr.name, length: 12), csr_path(certificate.csr), class: 'btn btn-xs btn-default btn-show-modal', remote: true %>
          <% else %>
            No CSR assigned.
          <% end  # unless %>
        </td>
        <td>
          <% unless certificate.keypair.nil? %>
            <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span>'.html_safe + ' ' + truncate(certificate.keypair.name, length: 12), keypair_path(certificate.keypair), class: 'btn btn-xs btn-default btn-show-modal', remote: true %>
          <% else %>
            No keypair assigned.
          <% end  # unless %>
        </td>
            <td>
              <%= link_to '<span class="glyphicon glyphicon-zoom-in"></span> View'.html_safe, certificate_path(certificate), class: 'btn btn-sm btn-default btn-show-modal', remote: true %>
              <%= link_to '<span class="glyphicon glyphicon-edit"></span> Edit'.html_safe, edit_certificate_path(certificate), class:"btn btn-sm btn-default" %>
              <%= link_to '<span class="glyphicon glyphicon-trash"></span> Delet'.html_safe, certificate, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'layouts/modal' %>
  </div>
<% end %>

<a class="btn btn-sm btn-default" href="<%=new_certificate_path%>" role="button">
  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
  Add Certificate
</a>
