<p id="notice"><%= notice %></p>

<h1>Listing Certificates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Certificatetype</th>
      <th>Key</th>
      <th>Csr</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.certificatetype.name %></td>
        <td><%= certificate.key.id %></td>
        <td><%= certificate.csr.id %></td>
        <td><%= truncate(certificate.content, length: 80) %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

