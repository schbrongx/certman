<p>
  <strong>Name:</strong>
  <%= @certificate.name %>
</p>

<p>
  <strong>Certificate Type:</strong>
  <%= @certificate.certificatetype.name %>
</p>

<p>
  <strong>Content:</strong>
  <br /><button class="btn btn-default btn-xs btn-copy-clipboard" data-clipboard-target="#certificate_content"><span class="glyphicon glyphicon-copy" aria-hidden="true"></span></button>
  <br /><%= simple_format @certificate.content.html_safe, id:"certificate_content" %>
</p>

<%= link_to 'Edit', edit_certificate_path(@certificate), class:"btn btn-sm btn-default"  %>
<%= link_to 'Back', request.referer, class:"btn btn-sm btn-default" %>
